<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-light">
        <div class="container">
          <%= link_to root_path, class: 'nav-link text-dark' do %>
            NaganoCake
          <% end %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if customer_signed_in? %>
              <nav class="header-list">
                <li class="heder-list-item">
                  <%= link_to public_customers_path do %>
                    マイページ
                  <% end %>
                </li>
                <li class="heder-list-item">
                  <%= link_to public_items_path do %>
                    商品一覧
                  <% end %>
                </li>
                <li class="heder-list-item">
                  <%= link_to public_cart_items_path do %>
                    カート
                  <% end %>
                  </li>
                <li class="heder-list-item">
                  <%= link_to destroy_customer_session_path, method: :delete do %>
                    ログアウト
                  <% end %>
                </li>
              </nav>
            <% elsif admin_signed_in? %>
              <nav class="header-list">
                <li class="heder-list-item">
                  <%= link_to admin_items_path do %>
                   商品一覧
                  <% end %>
                </li>
                <li class="heder-list-item">
                  <%= link_to admin_customers_path do %>
                    会員一覧
                  <% end %>
                </li>
                <li class="heder-list-item">
                  <%= link_to admin_top_path do %>
                    注文履歴一覧
                  <% end %>
                </li>
                <li class="heder-list-item">
                  <%= link_to admin_genres_path do %>
                    ジャンル一覧
                  <% end %>
                </li>
                <li class="heder-list-item">
                  <%= link_to destroy_admin_session_path, method: :delete do %>
                    ログアウト
                  <% end %>
                </li>
              </nav>
            <% else %>
              <nav class="header-list">
                <li class="heder-list-item">
                  <%= link_to homes_about_path do %>
                    About
                  <% end %>
                </li>
                <li class="heder-list-item">
                  <%= link_to admin_items_path do %>
                    商品一覧
                  <% end %>
                </li>
                <li class="heder-list-item">
                  <%= link_to new_customer_registration_path do %>
                    新規登録
                  <% end %>
                </li>
                <li class="heder-list-item">
                  <%= link_to new_customer_session_path do %>
                    ログイン
                  <% end %>
                </li>
              </nav>
            <% end %>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer>
    </footer>
  </body>
</html>
