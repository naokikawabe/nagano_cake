<h2>配送先登録/一覧</h2>

<%= form_with model: @address, url: public_addresses_path, local:true do |f| %>

  <div>
    <h4>郵便番号(ハイフンなし)</h4>
    <%= f.text_field :postal_code %>
  </div>
  <div>
    <h4>住所</h4>
    <%= f.text_field :address %>
  </div>
  <div>
    <h4>宛名</h4>
    <%= f.text_field :name %>
  </div>

  <%= f.submit"新規登録" %>
<% end %>

<table>
  <div>
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>
  </div>
    <% @addresses.each do |address| %>
    <tbody>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td><%= link_to "編集する", edit_public_address_path(address.id) %><%= link_to "削除する", public_address_path(address.id), method: :delete %></td>
      </tr>
    </tbody>
    <% end %>
</table>