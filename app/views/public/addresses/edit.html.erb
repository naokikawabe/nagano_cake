<h2>配送先編集</h2>

<%= form_with model: @address, url: public_address_path, local:true do |f| %>

  <div>
    <h4>郵便番号(ハイフンなし)</h4>
    <%= f.text_field :postal_code %>
  </div>
  <div>
    <h4>住所</h4>
    <%= f.text_field :address %>
  </div>
  <div>
    <h4>宛名</h4>
    <%= f.text_field :name %>
  </div>
  <%= f.submit"変更内容を保存" %>
<% end %>