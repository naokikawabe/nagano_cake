<h2>商品一覧</h2>

<div class="item-list-index">
  <% @items.each do |item| %>
    <div>
      <div>
        <%= link_to public_item_path(item.id) do %>
          <%= attachment_image_tag item, :image, :fill, 300, 300 %>
        <% end %>
      </div>

      <div><%= link_to item.name, public_item_path(item.id) %></div>
      <div>¥<%= (item.price * @tax).round %></div>
    </div>
  <% end %>
</div>

