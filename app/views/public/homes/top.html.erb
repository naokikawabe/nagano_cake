  <h2>新着商品</h2>
<div class="item-list-index">
    <% @items.each do |item| %>
    <div>
        <div>
          <%= link_to public_item_path(item.id) do %>
            <%= attachment_image_tag item, :image, :fill, 300, 300 %>
          <% end %>
        </div>
        <div><%= link_to item.name, public_item_path(item.id) %></div>
        <div>¥<%= (item.price * 1.1).round %></div>
    </div>
    <% end %>
</div>

<div>
  <%= link_to public_items_path do %>
    全て商品を見る＞
  <% end %>
</div>