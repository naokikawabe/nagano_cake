<h2>注文履歴一覧</h2>

<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime("%m月%d日") %></td>
        <td><%= order.address %></td>
        <td>
          <% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %>
          <% end %>
        </td>
        <td><%= (@shipping_cost+order.total_payment*1.1).round %></td>
        <td><%= order.status_i18n %></td>
        <td><%= link_to "表示する", public_order_path(order.id) %></td>
      </tr>
    <% end %>
  </tbody>




</table>