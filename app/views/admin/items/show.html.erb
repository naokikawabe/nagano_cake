<h2>商品詳細</h2>

<div>
  <%= attachment_image_tag @item, :image %>
</div>

<div>
    <li>商品名</li>
    <%= @item.name %>
</div>
<div>
    <li>商品説明</li>
    <%= @item.introduction %>
</div>
<div>
    <li>ジャンル</li>
    <%= @item.genre.name %>
</div>
<div>
