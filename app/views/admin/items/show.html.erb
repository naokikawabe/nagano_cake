<div class="title">商品詳細</div>

<main class="main">
  <div class="item-image">
    <%= attachment_image_tag @item, :image, :size =>'300x250' %>
  </div>
<div>
  <div class="item-list">
      <li>商品名</li>
      <%= @item.name %>
  </div>
  <div class="item-list">
      <li>商品説明</li>
      <%= @item.introduction %>
  </div>
  <div class="item-list">
      <li>ジャンル</li>
      <%= @item.genre.name %>
  </div>
  <div class="item-list">
      <li>販売価格</li>
      <%= @item.price %>円
  </div>
  <div class="item-list">
      <li>販売ステータス</li>
        <% if @item.is_active %>
          <td>販売中</td>
        <% else %>
          <td>販売中止</td>
        <% end %>
        </tr>
  </div>
  <div class="item-list">
    <%= link_to '編集する', edit_admin_item_path, class:"btn btn-success" %>
  </div>
</div>
</main>