<div class="title">ジャンル一覧・追加</div>

<%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
  <p>ジャンル名</p>
  <%= f.text_field :name %>

  <%= f.submit"新規登録", class:"btn btn-success" %>
<% end %>

<table class="table table-hover">
  <p>ジャンル</p>
  <% @genres.each do |genre| %>
    <div>
    　<tr>
    　  <%= genre.name %>
    　</tr>
    </div>
  　<div>
      <%= link_to edit_admin_genre_path(genre.id), class:"btn btn-success" do %>
         編集する
      <% end %>
  　</div>
  <% end %>
</table>