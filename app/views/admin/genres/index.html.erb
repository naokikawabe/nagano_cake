<h2>ジャンル一覧・追加</h2>

<%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
  <h4>ジャンル名</h4>
  <%= f.text_field :name %>

  <%= f.submit"新規登録" %>
<% end %>

<h4>ジャンル</h4>
<% @genres.each do |genre| %>
<div>
　<tr>
　  <%= genre.name %>
　</tr>
　<tr>
    <%= link_to edit_admin_genre_path(genre.id) do %>
       編集する
    <% end %>
　</tr>
<% end %>
</div>