<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="field">
    <li>
      氏名
      <%= f.label :last_name %>
      <%= f.last_name_field :last_name, autofocus: true, autocomplete: "last_name" %>
    </li>
    <li>
      <%= f.label :first_name, (名) %>
      <%= f.first_name_field :first_name, autofocus: true, autocomplete: "first_name" %>
    </li>
  </div>
  <div class="field">
    <li>
      フリガナ
      <%= f.label :last_name_kana, "(セイ)" %>
      <%= f.last_name_kana_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    </li>
    <li>
      <%= f.label :first_name_kana, "(メイ)" %>
      <%= f.first_name_kana_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
    </li>
  </div>
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %><br />
    <%= f.postal_code_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>
  <div class="field">
    <%= f.label :address, "住所" %><br />
    <%= f.address_field :address, autofocus: true, autocomplete: "address" %>
  </div>
  <div class="field">
    <%= f.label :telephone_number, "電話番号(ハイフンなし)" %><br />
    <%= f.telephone_number_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>
  <div class="field">
    <%= f.label :password, "パスワード(6文字以上)" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "customers/shared/links" %>
